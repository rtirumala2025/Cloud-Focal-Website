# Cloud Focal Website Environment Variables
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Cloud Focal
REACT_APP_DOMAIN=cloudfocal.com

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API endpoints
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_API_VERSION=v1

# Contact form submission endpoint
REACT_APP_CONTACT_API_URL=http://localhost:3001/api/contact

# Job application submission endpoint
REACT_APP_JOBS_API_URL=http://localhost:3001/api/jobs

# Newsletter subscription endpoint
REACT_APP_NEWSLETTER_API_URL=http://localhost:3001/api/newsletter

# ===========================================
# GOOGLE SERVICES
# ===========================================
# Google Maps API key for location services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Analytics tracking ID
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Google Tag Manager ID
REACT_APP_GTM_ID=GTM-XXXXXXX

# ===========================================
# EMAIL SERVICES
# ===========================================
# EmailJS configuration for contact forms
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# SendGrid API key (alternative email service)
REACT_APP_SENDGRID_API_KEY=your_sendgrid_api_key

# ===========================================
# SOCIAL MEDIA & EXTERNAL SERVICES
# ===========================================
# LinkedIn Company Page
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/cloudfocal

# Twitter Handle
REACT_APP_TWITTER_HANDLE=@cloudfocal

# Facebook Page
REACT_APP_FACEBOOK_URL=https://facebook.com/cloudfocal

# YouTube Channel
REACT_APP_YOUTUBE_URL=https://youtube.com/cloudfocal

# ===========================================
# CONTENT MANAGEMENT
# ===========================================
# Contentful CMS (if using)
REACT_APP_CONTENTFUL_SPACE_ID=your_contentful_space_id
REACT_APP_CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token

# Strapi CMS (if using)
REACT_APP_STRAPI_URL=http://localhost:1337

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
# JWT Secret for token generation
REACT_APP_JWT_SECRET=your_jwt_secret_key

# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=30

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_CHAT_SUPPORT=false
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_PWA=false

# ===========================================
# PERFORMANCE & MONITORING
# ===========================================
# Sentry error tracking
REACT_APP_SENTRY_DSN=your_sentry_dsn

# LogRocket session replay
REACT_APP_LOGROCKET_APP_ID=your_logrocket_app_id

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable React DevTools
REACT_APP_ENABLE_DEVTOOLS=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# Mock API responses (for development)
REACT_APP_USE_MOCK_API=false

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Calendly for meeting scheduling
REACT_APP_CALENDLY_URL=https://calendly.com/cloudfocal

# HubSpot integration
REACT_APP_HUBSPOT_PORTAL_ID=your_hubspot_portal_id

# Salesforce integration
REACT_APP_SALESFORCE_CLIENT_ID=your_salesforce_client_id

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================
# AWS S3 configuration
REACT_APP_AWS_S3_BUCKET=cloudfocal-uploads
REACT_APP_AWS_REGION=us-east-1

# Cloudinary for image management
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# ===========================================
# NOTIFICATIONS
# ===========================================
# Push notification service
REACT_APP_VAPID_PUBLIC_KEY=your_vapid_public_key

# Slack webhook for notifications
REACT_APP_SLACK_WEBHOOK_URL=your_slack_webhook_url

# ===========================================
# BACKUP & RECOVERY
# ===========================================
# Database backup endpoint
REACT_APP_BACKUP_API_URL=http://localhost:3001/api/backup

# ===========================================
# COMPLIANCE & LEGAL
# ===========================================
# GDPR compliance settings
REACT_APP_ENABLE_GDPR_COMPLIANCE=true

# Cookie consent settings
REACT_APP_COOKIE_CONSENT_REQUIRED=true

# Privacy policy version
REACT_APP_PRIVACY_POLICY_VERSION=1.0

# ===========================================
# LOCALIZATION
# ===========================================
# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# Supported languages
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr

# ===========================================
# CACHING & CDN
# ===========================================
# CDN URL for static assets
REACT_APP_CDN_URL=https://cdn.cloudfocal.com

# Cache TTL (in seconds)
REACT_APP_CACHE_TTL=3600
